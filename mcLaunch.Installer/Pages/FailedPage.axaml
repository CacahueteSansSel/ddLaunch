<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="mcLaunch.Installer.Pages.FailedPage">
    <UserControl.Styles>
        <StyleInclude Source="/Styles/AppStyles.axaml" />
    </UserControl.Styles>

    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Vertical" Spacing="3">
            <TextBlock TextWrapping="Wrap" Classes="title" FontSize="25" Margin="0 0 0 10">mcLaunch failed to install</TextBlock>
            <TextBlock TextWrapping="Wrap">The installer encountered an error and mcLaunch failed to install. You will need to resolve the problem, then retry the installation.</TextBlock>
            <TextBlock x:Name="ErrorDetailsText" TextWrapping="Wrap">Error details</TextBlock>
        </StackPanel>
    </StackPanel>
</UserControl>