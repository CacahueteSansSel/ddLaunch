<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="620" d:DesignHeight="450"
             x:Class="mcLaunch.Installer.Pages.WelcomePage">
    <UserControl.Styles>
        <StyleInclude Source="/Styles/AppStyles.axaml" />
    </UserControl.Styles>

    <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Vertical" Spacing="3">
            <TextBlock Classes="title" FontSize="25" Margin="0 0 0 10">Install mcLaunch</TextBlock>
            <TextBlock>This setup will guide you through the installation of mcLaunch</TextBlock>
            <TextBlock x:Name="VersionText">Fetching latest version...</TextBlock>
            <TextBlock Margin="0 5 0 0" Classes="title">Press next to continue the installation</TextBlock>
        </StackPanel>
    </StackPanel>
</UserControl>