<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="65"
             Height="65" Background="{DynamicResource Background}"
             x:Class="ddLaunch.Views.ToolButtonsBar">
    <UserControl.Styles>
        <StyleInclude Source="/Styles/DdStyles.axaml"></StyleInclude>
    </UserControl.Styles>
    <DockPanel>
        <Button DockPanel.Dock="Left" Margin="20 0 0 0" Classes="primary" Click="NewBoxButtonClicked">New box</Button>
        <Button DockPanel.Dock="Left" Margin="10 0 0 0" Classes="secondary" Click="ImportBoxButtonClicked">Import a box</Button>
        <StackPanel DockPanel.Dock="Right" Margin="0 0 20 0" VerticalAlignment="Center">
            <TextBlock Text="{Binding Account.Username}"></TextBlock>
        </StackPanel>
        <Button DockPanel.Dock="Right" Margin="10 0 10 0" Classes="secondary" Click="DisconnectButtonClicked">Disconnect</Button>
        <Panel></Panel>
    </DockPanel>
</UserControl>
