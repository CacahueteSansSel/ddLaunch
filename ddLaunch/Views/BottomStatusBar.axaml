<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="74"
             Height="74" Background="{DynamicResource Background}"
             x:Class="ddLaunch.Views.BottomStatusBar">
    <UserControl.Styles>
        <StyleInclude Source="/Styles/DdStyles.axaml"></StyleInclude>
    </UserControl.Styles>
    <Panel>
        <StackPanel Width="270" Margin="0 18 0 15" Orientation="Vertical">
            <ProgressBar Value="{Binding Progress}"></ProgressBar>
            <TextBlock Margin="0 5 0 0" TextAlignment="Center" Text="{Binding ResourceName}"></TextBlock>
            <TextBlock TextAlignment="Center" Text="{Binding ResourceCount}"></TextBlock>
        </StackPanel>
    </Panel>
</UserControl>