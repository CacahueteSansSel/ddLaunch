<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="50"
             Background="{DynamicResource Background}"
             Height="50"
             x:Class="mcLaunch.Views.HeaderBar"
             IsHitTestVisible="False">
    <Panel>
        <DockPanel>
            <Panel DockPanel.Dock="Left" x:Name="MacosButtonsMargin" Width="80"></Panel>
            <Image x:Name="Logo" DockPanel.Dock="Left" VerticalAlignment="Top" IsHitTestVisible="False"
                   Source="/resources/logo_beta.png" Height="35" Margin="15 5 0 0" />
            <Image x:Name="OfflineBadge" IsVisible="False" DockPanel.Dock="Left" VerticalAlignment="Top"
                   IsHitTestVisible="False" Source="/resources/header_bar_badge_offline.png" Height="17"
                   Margin="15 13.5 0 0" />
            <TextBlock x:Name="TitleText" VerticalAlignment="Center" Margin="15 0 0 5" IsHitTestVisible="False">Title</TextBlock>
            <Panel />
        </DockPanel>
    </Panel>
</UserControl>