<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600"
             Width="600" Height="300"
             x:Class="mcLaunch.Views.Popups.ConfirmMessageBoxPopup">
    <UserControl.Styles>
        <StyleInclude Source="/Styles/AppStyles.axaml"></StyleInclude>
    </UserControl.Styles>
    <Border Classes="frame">
        <DockPanel Margin="38">
            <TextBlock DockPanel.Dock="Top" Classes="title" FontSize="25" Text="{Binding Title}"></TextBlock>
            <DockPanel DockPanel.Dock="Bottom" Margin="0 20 0 0">
                <Button DockPanel.Dock="Right" Margin="10 0 0 0" Classes="secondary" Click="NoButtonClicked">No</Button>
                <Button DockPanel.Dock="Right" Classes="primary" Click="YesButtonClicked">Yes</Button>
                <Panel></Panel>
            </DockPanel>
            <TextBlock DockPanel.Dock="Top" Margin="0 20 0 0" TextWrapping="WrapWithOverflow" Text="{Binding Text}"></TextBlock>
        </DockPanel>
    </Border>
</UserControl>
