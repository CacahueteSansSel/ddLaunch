<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="39"
             x:Class="mcLaunch.Views.PageButton">
    <UserControl.Styles>
        <StyleInclude Source="/Styles/AppStyles.axaml" />
    </UserControl.Styles>
    <Button Classes="secondary" Padding="13 10 13 10" Height="39" MinWidth="39" Click="ButtonClicked">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <TextBlock x:Name="PageIndexText" HorizontalAlignment="Center">1</TextBlock>
            <Border x:Name="Light" IsVisible="False" HorizontalAlignment="Center" Width="12" Height="3"
                    Background="{StaticResource BrightAccent}" CornerRadius="2" />
        </StackPanel>
    </Button>
</UserControl>