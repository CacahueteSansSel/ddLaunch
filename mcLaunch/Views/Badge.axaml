<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="mcLaunch.Views.Badge">
    <UserControl.Styles>
        <StyleInclude Source="/Styles/AppStyles.axaml"></StyleInclude>
        
        <Style Selector="Border.badge">
            <Setter Property="Background" Value="{DynamicResource BackgroundLightest}"></Setter>
            <Setter Property="Padding" Value="5 0 5 0"></Setter>
            <Setter Property="Height" Value="20"></Setter>
            <Setter Property="CornerRadius" Value="4"></Setter>
            <Setter Property="BorderThickness" Value="1"></Setter>
            <Setter Property="BorderBrush" Value="{DynamicResource BackgroundLighter}"></Setter>
        </Style>
    </UserControl.Styles>
    <Border Classes="badge">
        <StackPanel Orientation="Horizontal">
            <Image x:Name="IconImage" VerticalAlignment="Center" Width="12" Height="12" Source="/resources/icons/edit.png"></Image>
            <TextBlock x:Name="Label" Margin="5 0 0 0" Classes="light">Editor</TextBlock>
        </StackPanel>
    </Border>
</UserControl>
