<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignHeight="20"
             Height="20"
             x:Class="mcLaunch.Views.Badge">
    <UserControl.Styles>
        <StyleInclude Source="/Styles/AppStyles.axaml"></StyleInclude>
    </UserControl.Styles>
    <Border Classes="frame-light" Padding="5 0 5 0">
        <StackPanel Orientation="Horizontal">
            <Image x:Name="IconImage" VerticalAlignment="Center" Width="12" Height="12" Source="/resources/icons/edit.png"></Image>
            <TextBlock x:Name="Label" Margin="5 0 0 0" Classes="light">Editor</TextBlock>
        </StackPanel>
    </Border>
</UserControl>
